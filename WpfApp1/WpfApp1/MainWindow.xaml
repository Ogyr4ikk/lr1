<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.482,2.227">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="10 40 10 40 ">Верхний предел</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" Margin="10 40 10 40 ">Нижний предел</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="1" Margin="10 40 10 40 ">Паша говноед</TextBlock>
        <TextBox Name="tbUpperBound" Grid.Row="1" Grid.Column="2" >Вводи!!</TextBox>
        <TextBox Name="tbUpperBound1" Grid.Row="2" Grid.Column="2">Вводи!!</TextBox>
    </Grid>
</Window>
    
   
